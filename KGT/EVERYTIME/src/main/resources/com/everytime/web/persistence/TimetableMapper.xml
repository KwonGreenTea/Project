<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.everytime.web.persistence.TimetableMapper">

	<resultMap type="com.everytime.web.domain.TimetableVO"
		id="TimetableResultMap">
		
		<result property="course_id" column="COURSE_ID" /> 
    	<result property="major" column="MAJOR" />
    	<result property="course_class" column="COURSE_CLASS" />
    	<result property="course_name" column="COURSE_NAME" />
    	<result property="professor" column="PROFESSOR" />
    	<result property="grade" column="GRADE"/>
    	<result property="start_time" column="START_TIME" />
    	<result property="course_room" column="COURSE_ROOM" />
    	<result property="course_review" column="COURSE_REVIEW" />
    	<result property="notice" column="NOTICE" />
    	<result property="finish_time" column="FINISH_TIME" />
	</resultMap>

	<!-- 강의 세부사항 입력 !!관리자 전용 -->
	<insert id="insert">
		INSERT INTO COURSE
      	VALUES 
      	(#{course_id}, #{major}, #{course_class}, #{course_name}, #{professor}, #{grade}, 
      	#{start_time}, #{course_room}, #{course_review}, #{notice}, #{finish_time})
	</insert>
	
	<select id="allSelect" resultMap="TimetableResultMap">
		SELECT * FROM COURSE
	</select>
</mapper>